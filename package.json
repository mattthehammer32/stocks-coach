{
  "name": "stocks-coach",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "dev:web": "pnpm --filter @stocks/web dev",
    "dev:api": "uvicorn apps.api.main:app --reload --host 0.0.0.0 --port 8000",
    "dev": "concurrently -k \"pnpm dev:api\" \"pnpm dev:web\"",
    "lint": "echo \"add linters later\""
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}